
@{
    ViewBag.Title = "Your Task List";
}

<h2>@ViewBag.AuthorizedUser.FirstName's Task List</h2>

<table class="table">
    <tr>
        <th>Task Name</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Complete?</th>
    </tr>

    @foreach (var u in ViewBag.UserTasks)
    {
        <tr>
            <td>@u.TaskName</td>
            <td>@u.Description</td>
            <td>@u.DueDate</td>
            <td>@u.Complete</td>
            <td><a href="/Home/MarkComplete?TaskName=@u.TaskName">Change Status</a></td>
            <td>
                <a href="/Home/DeleteTask?TaskName=@u.TaskName" onclick="return confirm('Are you sure you want to delete this task?')">
                   <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }
</table>

<a href="/Home/TaskForm" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-plus"></span> Click here to add a new task to your list
</a>



